{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "../",
    "testPathIgnorePatterns": [
        "<rootDir>/dist",
        "<rootDir>/node_modules",
        "<rootDir>/tests/jobs"
    ],
    "testMatch": [
        "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
        "html"
    ],
    "coverageDirectory": "<rootDir>/jest/coverage/integrationTests",
    "coverageThreshold": {
        "app/**/*.helper.ts": {
            "functions": 100
        },
        "app/**/*.service.ts": {
            "functions": 100
        },
        "app/**/*.ctrl.ts": {
            "functions": 100
        },
        "app/events/**/*.handler.ts": {
            "functions": 100
        },
        "app/**/*.types.ts": {
            "functions": 100,
            "statements": 100,
            "lines": 100,
            "branches": 100
        },
        "app/**/*.errors.ts": {
            "functions": 100,
            "statements": 100,
            "lines": 100,
            "branches": 100
        },
        "app/**/*.validation.ts": {
            "functions": 100,
            "statements": 100,
            "lines": 100,
            "branches": 100
        },
        "app/**/*.router.ts": {
            "functions": 100,
            "statements": 100,
            "lines": 100,
            "branches": 100
        }
    },
    "silent": true,
    "clearMocks": true
}